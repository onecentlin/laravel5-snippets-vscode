	"link_to": {
		"prefix": "link_to",
		"body": [
            "{!! link_to(${1:$url}, ${2:$title = null}, ${3:$attributes = []}, ${4:$secure = null}, ${5:$escape = true}) !!}"
        ],
		"description": "Generate an HTML link"
	},
